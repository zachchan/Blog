a#rocket.show(href='#top')

button#rocketMenu.showMenu(class="uk-button uk-button-default uk-margin-small-right" type="button" uk-toggle="target: #offcanvas-reveal" style="outline: none;border: none;margin: 0;padding: 0;right: 40px;")   
div(id="offcanvas-reveal" uk-offcanvas="mode: reveal; overlay: true")
        div(class="uk-offcanvas-bar")
            if theme.widgets_on_small_screens
                .pure-u-1.pure-u-md-4-4: #sidebar
                    each item in theme.widgets
                        != partial('_widget/' + item + '.pug', null, {cache: !config.relative_link})
            else
                .pure-u-1-4.hidden_mid_and_down: #sidebar
                    each item in theme.widgets
                        != partial('_widget/' + item + '.pug', null, {cache: !config.relative_link})


script(type='text/javascript', src=url_for(theme.js) + '/totop.js' + '?v=' + theme.version, async)




